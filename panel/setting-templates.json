{
  "folders": {
    "Vertical [split]": {
      "folders": {
        "width": "narrow",
        "title_size": "small",
        "items": "preview,title,date,description",
        "classes": "hover,frame,text-left",
        "hide": false,
        "crop": {
          "enabled": false
        },
        "caption": {
          "enabled": false
        },
        "split": {
          "enabled": true,
          "ratio": 6,
          "invert": true
        },
        "layout": "vertical"
      }
    },
